{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "GhostType",
  "version": "0.1.0",
  "identifier": "com.ghosttype.client",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "macOS": {
      "infoPlist": "Info.plist"
    }
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "GhostType",
        "width": 800,
        "height": 600,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  }
}
